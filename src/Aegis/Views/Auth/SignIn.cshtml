@model SignInCommand

@{
    ViewData["Title"] = "Sign In";
}

<div class="row">

    <div class="col-12 d-flex justify-content-center">
        <div class="blank col-md-8 col-lg-6 col-xl-5">
            <div class="card overflow-hidden">
                <div class="card-body">
                    <div class="p-2">

                        <form asp-controller="Auth" asp-action="SignIn" method="@FormMethod.Post" class="form-horizontal" data-parsley-validate>
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="@Model.ReturnUrl" />

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="mb-3">
                                <label asp-for="@Model.Email" class="form-label">Email</label>
                                <input asp-for="@Model.Email" type="email" class="form-control" placeholder="Enter email"
                                       required parsley-type="email" data-parsley-trigger="change focusout">
                                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="@Model.Password" class="form-label">Password</label>
                                <input asp-for="@Model.Password" type="password" class="form-control" placeholder="Enter password" aria-label="Password" aria-describedby="password-addon"
                                       required data-parsley-trigger="change focusout" >
                                   <span asp-validation-for="@Model.Password" class="text-danger"></span>
                            </div>

                            <div class="form-check">
                                <input asp-for="@Model.RememberMe" class="form-check-input" type="checkbox" id="remember-check">
                                <label asp-for="@Model.RememberMe" class="form-check-label" for="remember-check">
                                    Remember me
                                </label>
                            </div>

                            <div class="mt-3 d-grid">
                                <button class="btn btn-outline-primary waves-effect waves-light" type="submit">Sign In</button>
                            </div>

                            <div class="mt-3 text-center">
                                <a href=@Url.Action("ForgotPassword", "Auth") class="text-muted"><i class="mdi mdi-lock me-1"></i> Forgot your password?</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
            <div class="text-center">

                <div>
                        <p>Don't have an account ? <a href=@Url.Action("SignUp", "Auth")" class="fw-medium text-primary"> SignUp now </a> </p>
                </div>
            </div>
        </div>
    </div>

</div>