@model SignUpCommand
@{
	ViewData["Title"] = "Sign Up";
}

@section styles{
	<link href="~/assets/css/passwordChecker.css" rel="stylesheet" type="text/css" />
}

<div class="row">

	<div class="col-12 d-flex justify-content-center">
		<div class="blank col-md-10 col-lg-8 col-xl-6">
			<div class="card overflow-hidden">
				<div class="card-body">
					<div class="p-2">

						<form asp-controller="Auth" asp-action="SignUp" method="@FormMethod.Post" class="form-horizontal" data-parsley-validate>
							@Html.AntiForgeryToken()
							<input type="hidden" asp-for="@Model.ReturnUrl" />

							<div asp-validation-summary="ModelOnly" class="text-danger"></div>

							<div class="mb-3">
								<label asp-for="@Model.Email" class="form-label">Email</label>
								<input asp-for="@Model.Email" type="email" class="form-control" placeholder="Enter email"
									   required parsley-type="email" data-parsley-trigger="change focusout">
								<span asp-validation-for="@Model.Email" class="text-danger"></span>
							</div>

							<div class="mb-2">
								<label asp-for="@Model.Password" class="form-label">Password</label>
								<input asp-for="@Model.Password" type="password" id="password" class="form-control" placeholder="Enter password"
									   required data-parsley-trigger="change focusout" />
								<span asp-validation-for="@Model.Password" class="text-danger"></span>
							</div>

							<div class="progress mb-2">
								<div id="password-strength"
									 class="progress-bar"
									 role="progressbar"
									 aria-valuenow="40"
									 aria-valuemin="0"
									 aria-valuemax="100"
									 style="width:0%">
								</div>
							</div>
							<div class="m-1">
								<ul class="list-unstyled">
									<li class="">
										<span class="low-case">
											<i class="fas fa-circle" aria-hidden="true"></i>
											&nbsp;Lowercase
										</span>
									</li>
									<li class="">
										<span class="upper-case">
											<i class="fas fa-circle" aria-hidden="true"></i>
											&nbsp;Uppercase
										</span>
									</li>
									<li class="">
										<span class="one-number">
											<i class="fas fa-circle" aria-hidden="true"></i>
											&nbsp;Number (0-9)
										</span>
									</li>
									<li class="">
										<span class="one-special-char">
											<i class="fas fa-circle" aria-hidden="true"></i>
											&nbsp;Special Character (!@@#$%^&*)
										</span>
									</li>
									<li class="">
										<span class="eight-character">
											<i class="fas fa-circle" aria-hidden="true"></i>
											&nbsp;Atleast 8 Character
										</span>
									</li>
								</ul>
							</div>

							<div class="mb-3">
								<label asp-for="@Model.ConfirmPassword" class="form-label">Confirm Password</label>
								<input asp-for="@Model.ConfirmPassword" type="password" id="confirm-password" class="form-control" placeholder="Confirm password"
									   required data-parsley-equalto="#password" data-parsley-trigger="change focusout">
								<span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
							</div>

							<div class="mb-3">
								<div class="form-check form-check-primary">
									<input asp-for="@Model.AcceptTerms" class="form-check-input" type="checkbox"
										   required data-parsley-trigger="change focusout">
									<label asp-for="@Model.AcceptTerms" class="form-check-label">By registering you agree to the <a href="#" class="text-primary">Terms of Use</a></label>
									<span asp-validation-for="@Model.AcceptTerms" class="text-danger"></span>
								</div>
							</div>

							<div class="mb-3 d-grid">
								<button type="submit" class="btn btn-outline-primary waves-effect waves-light">Sign Up</button>
							</div>

						</form>
					</div>
				</div>
			</div>
			<div class="text-center">

				<div>
					<p>Already have an account ? <a href="@Url.Action("SignIn", "Auth")" class="fw-medium text-primary"> SignIn </a> </p>
				</div>
			</div>
		</div>
	</div>

</div>

@section scripts{
	<script src="/assets/js/passwordChecker.js" type="text/javascript"></script>
}