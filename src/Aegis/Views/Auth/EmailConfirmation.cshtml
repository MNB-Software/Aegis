@model EmailConfirmationQueryResult

@{
	ViewData["Title"] = "Email Confirmation";
}

<div class="row">

	<div class="col-12 d-flex justify-content-center">
		<div class="blank col-md-10 col-lg-8 col-xl-6">
			<div class="card overflow-hidden">
				<div class="card-body">
					<div class="p-2">

						<div class="mb-5 mt-n4">
							<div class="text-center">
								<h2>Thank you for Signing Up!</h2>
								<p class="text-muted px-4">An confirmation link has been send to your email. For security reasons You will be able to Sign In after the email has been confirmed!</p>
							</div>
						</div>

						<div class="mb-3 d-flex justify-content-center">
							<div class="btn-group btn-group-example auth-options" role="group">
								<a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary w-lg">Go Home</a>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>

</div>
