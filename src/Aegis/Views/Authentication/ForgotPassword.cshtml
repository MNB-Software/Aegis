@model SendForgetPasswordCommand

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="row">

    <div class="col-12 d-flex justify-content-center">
        <div class="blank col-md-8 col-lg-6 col-xl-5">
            <div class="card overflow-hidden">
                <div class="card-body">
                    <div class="p-2">

                        <form asp-controller="Authentication" asp-action="ForgotPassword" method="@FormMethod.Post" class="form-horizontal" data-parsley-validate>
                            @Html.AntiForgeryToken()

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="mb-3">
                                <label asp-for="@Model.Email" class="form-label">Email</label>
                                <input asp-for="@Model.Email" type="email" class="form-control" placeholder="Enter email"
                                       required parsley-type="email" data-parsley-trigger="change focusout">
                                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                            </div>

                            <div class="mt-3 d-grid">
                                <button class="btn btn-outline-primary waves-effect waves-light" type="submit">Reset Password</button>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>